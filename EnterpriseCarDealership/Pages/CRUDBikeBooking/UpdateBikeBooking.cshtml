@page "{id:int}"
@model EnterpriseCarDealership.Pages.CRUDBikeBooking.UpdateBikeBookingModel
@{
}
@*Jakob*@
<div class="container border" style="padding:20px">
    <form  method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
         <div class="form-group row">
             @*de følgende input fields tager de tilsvarende attributter af klassen BikeBooking
        *@
            <div class="col-2">
                <label asp-for="@Model.bikeBooking.Id"></label>
            </div>
            <div class="col-5">
                <input readonly type="text" value="@Model.bikeBooking.Id" asp-for="@Model.bikeBooking.Id" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.bikeBooking.Id"></span>
        
  
            <div class="col-2">
                <label asp-for="@Model.bikeBooking.StartTime"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.bikeBooking.StartTime" asp-for="@Model.bikeBooking.StartTime" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.bikeBooking.StartTime"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.bikeBooking.EndTime"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.bikeBooking.EndTime" asp-for="@Model.bikeBooking.EndTime" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.bikeBooking.EndTime"></span>
        </div>

          <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.bikeBooking.KundeId"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.bikeBooking.KundeId" asp-for="@Model.bikeBooking.KundeId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.bikeBooking.KundeId"></span>
        </div>

          <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.bikeBooking.BikeId"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.bikeBooking.BikeId" asp-for="@Model.bikeBooking.BikeId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.bikeBooking.BikeId"></span>
        </div>

          
        @*den følgende knap er forbundet til metoden op post i controller delen som opdaterer*@
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-dark" value="UpdateBikeBooking" />
            </div>
            <div class="col-5">
            </div>
        </div>
        
        
    </form>
</div>