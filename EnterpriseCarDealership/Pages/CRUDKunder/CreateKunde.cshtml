@page
@model EnterpriseCarDealership.Pages.CRUDKunder.CreateKundeModel
@{
}
@*  //Jakob*@
<div class="container" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="style.css">

    <title>Login </title>
</head>
        @* de følgende input fields er forbundet med de relaterede attributter i controller delen*@
<body>
    <div class="box">
        <div class="Container">
            <div class="top-header">
                <span>Have an account?</span>
                <header>Create an account</header>
            </div>
            <div class="input-field">
                <input type="text" placeholder="Username" class="form-control" name="Name" asp-for="createKunde.Name" value="Name">
                <i class="bx bx-user"> </i>
            </div>

            <div class="input-field">
                <input type="text" placeholder="Password" class="form-control" name="Password" asp-for="createKunde.password" value="Password">
                <i class="bx bx-lock-alt"> </i>
            </div>

            <div class="input-field">
                <input type="text" placeholder="Adress" class="form-control" name="Adress" asp-for="createKunde.adress" value="Adress">
                <i class="bx bx-lock-alt"> </i>
            </div>

            <div class="input-field">
                <input type="text" placeholder="Phone Number" class="form-control" name="tlf" asp-for="createKunde.tlf" value="Phone Number">
                <i class="bx bx-lock-alt"> </i>
            </div>
                    @*knappen er forbundet med funktionen oppost i controller delen*@

            <div class="input-field">
                <button type="submit" class="btn btn-dark">Create </button>
            </div>

            <div class="bottom">
                <div class="left">
                    <input type="checkbox" id="check">
                    <label for="check">Remember ME</label>
                </div>
               
            </div>

        </div>
    </div>
</body>
</form>
</div>