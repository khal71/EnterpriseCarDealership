@page
@model EnterpriseCarDealership.Pages.CRUDCarBooking.UpdateCarBookingModel
@{
}
@*Jakob*@
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
          @*de følgende input fields tager de tilsvarende attributter af klassen CarBooking
        *@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.carBooking.Id"></label>
            </div>
            <div class="col-5">
                <input readonly type="text" value="@Model.carBooking.Id" asp-for="@Model.carBooking.Id" class="form-control" />


            </div>
            <span class="text-danger" asp-validation-for="@Model.carBooking.Id"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.carBooking.StartTime"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.carBooking.StartTime" asp-for="@Model.carBooking.StartTime" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.carBooking.StartTime"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.carBooking.EndTime"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.carBooking.EndTime" asp-for="@Model.carBooking.EndTime" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.carBooking.EndTime"></span>
        </div>

          <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.carBooking.KundeId"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.carBooking.KundeId" asp-for="@Model.carBooking.KundeId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.carBooking.KundeId"></span>
        </div>

          <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.carBooking.CarId"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.carBooking.CarId" asp-for="@Model.carBooking.CarId" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.carBooking.CarId"></span>
        </div>

          
           
        @*den følgende knap er forbundet til metoden op post i controller delen som opdaterer*@
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-dark" value="UpdateCarBooking" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div