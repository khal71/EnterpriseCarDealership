@page "{id:int}"
@model EnterpriseCarDealership.Pages.CRUDCar.UpdateCarModel
@{
}
@*Khaled*@
<div class="container border" style="padding:20px">
    <form asp-route-id="Model.existingCar.NextId" method="post">
