            </div>
            <span class="text-danger" asp-validation-for="car.Sensor"></span>
        </div>

           @*den følgende knap er forbundet til metoden op post i controller delen som opdaterer*@
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-dark" value="UpdateCar" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
