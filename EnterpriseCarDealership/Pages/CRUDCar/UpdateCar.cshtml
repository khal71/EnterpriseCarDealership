            </div>
            <span class="text-danger" asp-validation-for="car.PrisPrDag"></span>
        </div>

          <div class="form-group row">
            <div class="col-2">
                <label asp-for="car.Year"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.existingCar.PrisPrDag" asp-for="car.PrisPrDag" class="form-control" />
