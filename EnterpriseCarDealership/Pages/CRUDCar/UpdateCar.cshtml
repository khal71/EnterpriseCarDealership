            <div class="col-2">
                <label asp-for="car.Type"></label>
            </div>
            <div class="col-5">
                <input type="text" value="@Model.existingCar.Type" asp-for="car.Type" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="car.Type"></span>
        </div>

          <div class="form-group row">
            <div class="col-2">
